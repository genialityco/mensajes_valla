{
  "rules": {
    "billboard-messages": {
      "current": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['text', 'timestamp'])",
        "text": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
